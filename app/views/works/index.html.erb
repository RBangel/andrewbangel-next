<div id="works">
	<% unless @works.nil? %>
		<% @works.each_slice(3) do |works| %>
			<ul class="row">
				<%= render works %>
			</ul>
		<% end %>
	<% end %>
	<p class="title"><%= link_to "Add Work", new_work_path %></p>
</div>

<% content_for :modals do %>
	<% unless @works.nil? %>
		<% @works.each do |work| %>
			<div id="<%= work.id %>Modal" class="reveal-modal medium">
				<h2><%= work.title %></h2>
				<div class="flex-video widescreen vimeo">
					<iframe width="420" height="315" src="<%= work.url %>" frameborder="0" allowfullscreen></iframe>
				</div>
			</div>
		<% end %>
	<% end %>
<% end %>
